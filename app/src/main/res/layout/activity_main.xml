    <Button
        android:id="@+id/useWifiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Utiliser le Wi-Fi"
        android:backgroundTint="@color/blue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/useCellularButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Utiliser le rÃ©seau cellulaire"
        android:backgroundTint="@color/blue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/useWifiButton" />

    <Button
        android:id="@+id/GPS_Button"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/blue_button"
        android:text="@string/choisir"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />

    <Button
        android:id="@+id/Service_Button"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/blue_button"
